{
	"name": "Development Container",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "lts"
		}
	},
	"postCreateCommand": "bash .devcontainer/setup.sh",
	"customizations": {
		"vscode": {
			"extensions": ["quarto.quarto", "esbenp.prettier-vscode"]
		}
	},
	"remoteUser": "vscode"
}
